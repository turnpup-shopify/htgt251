{% liquid
  assign is_blog = false
  assign is_hapny = false
  assign is_hapny_vendor = false
  assign skip_popup_render = false
  assign is_design_mode = request.design_mode

  assign current_page_handle = ''
  if request.page_type == 'product' and product
    assign current_page_handle = product.handle | default: ''
  elsif request.page_type == 'collection' and collection
    assign current_page_handle = collection.handle | default: ''
  elsif request.page_type == 'page' and page
    assign current_page_handle = page.handle | default: ''
  elsif request.page_type == 'article' and article
    assign current_page_handle = article.handle | default: ''
  elsif request.page_type == 'blog' and blog
    assign current_page_handle = blog.handle | default: ''
  endif

  assign current_page_handle_downcase = current_page_handle | downcase
  assign request_path = request.path | default: ''
  assign request_path_downcase = request_path | downcase
  assign current_url = canonical_url | default: request.path | default: ''
  assign current_url_downcase = current_url | downcase
  assign last_path_segment = request_path_downcase | split: '/' | last
  assign popup_include_handles_setting = settings.popup_include_handles | to_s | strip
  assign handle_included = true
  if popup_include_handles_setting != blank
    assign handle_included = false
    assign popup_include_handles = popup_include_handles_setting | newline_to_br | split: '<br />'
    for handle in popup_include_handles
      assign trimmed_handle = handle | strip | downcase
      if trimmed_handle != blank
        if current_page_handle_downcase != blank and current_page_handle_downcase == trimmed_handle
          assign handle_included = true
        elsif last_path_segment != blank and last_path_segment == trimmed_handle
          assign handle_included = true
        elsif request_path_downcase != blank and request_path_downcase contains trimmed_handle
          assign handle_included = true
        endif
      endif
    endfor
  endif

  assign popup_excluded_handles_setting = settings.popup_excluded_handles | to_s | strip
  assign handle_excluded = false
  if popup_excluded_handles_setting != blank and current_url_downcase != blank
    assign popup_excluded_handles = popup_excluded_handles_setting | newline_to_br | split: '<br />'
    for handle in popup_excluded_handles
      assign trimmed_handle = handle | strip | downcase
      if trimmed_handle != blank and current_url_downcase contains trimmed_handle
        assign handle_excluded = true
      endif
    endfor
  endif

  if handle_included == false or handle_excluded
    assign skip_popup_render = true
  endif

  if request.page_type == 'product'
    if product and product.vendor
      assign normalized_vendor = product.vendor | strip | downcase
      if normalized_vendor == 'hapny home'
        assign is_hapny_vendor = true
      endif
    endif
  endif

  assign hapny_collection_handles_setting = settings.hapny_popup_collections | to_s | strip
  assign hapny_collection_handles = hapny_collection_handles_setting | newline_to_br | split: '<br />'
  assign hapny_collection_handles = hapny_collection_handles | map: 'strip'
  assign hapny_on_collection = false
  assign current_collection_handle = ''
  if request.page_type == 'collection' and collection
    assign current_collection_handle = collection.handle | strip
  endif
  assign current_collection_handle_downcase = current_collection_handle | downcase
  for hapny_collection_handle in hapny_collection_handles
    assign trimmed_hapny_collection = hapny_collection_handle | strip | downcase
    if trimmed_hapny_collection == blank
      continue
    endif
    if current_collection_handle_downcase != blank and current_collection_handle_downcase == trimmed_hapny_collection
      assign hapny_on_collection = true
    elsif last_path_segment != blank and last_path_segment == trimmed_hapny_collection
      assign hapny_on_collection = true
    elsif request_path_downcase != blank and request_path_downcase contains trimmed_hapny_collection
      assign hapny_on_collection = true
    endif
    if hapny_on_collection
      break
    endif
  endfor

  assign hapny_popup_handles_setting = settings.hapny_popup_handles | to_s | strip
  assign hapny_on_handle = false
  if hapny_popup_handles_setting != blank
    assign hapny_popup_handles = hapny_popup_handles_setting | newline_to_br | split: '<br />'
    for hapny_handle in hapny_popup_handles
      assign trimmed_hapny_handle = hapny_handle | strip | downcase
      if trimmed_hapny_handle != blank
        if current_page_handle_downcase != blank and current_page_handle_downcase == trimmed_hapny_handle
          assign hapny_on_handle = true
        elsif last_path_segment != blank and last_path_segment == trimmed_hapny_handle
          assign hapny_on_handle = true
        elsif request_path_downcase != blank and request_path_downcase contains trimmed_hapny_handle
          assign hapny_on_handle = true
        endif
      endif
    endfor
  endif

  assign hapny_match = false
  if is_hapny_vendor or hapny_on_collection or hapny_on_handle
    assign hapny_match = true
  endif

  if hapny_match
    if settings.enable_hapny_popup
      assign is_hapny = true
      assign skip_popup_render = false
    else
      assign skip_popup_render = true
    endif
  endif

  if is_design_mode
    if settings.show_popup_in_editor
      assign skip_popup_render = false
    else
      assign skip_popup_render = true
    endif
  endif

  if canonical_url contains '/blogs/' or canonical_url contains '/blog'
    assign is_blog = true
  endif

  assign default_button_label = 'Unlock Markdowns'

  if is_hapny
    assign popup_header = settings.hapny_header_popup_message | default: settings.header_popup_message
    assign popup_body = settings.hapny_popup_message | default: settings.popup_message
    assign popup_img = settings.hapny_popup_image_desktop | default: settings.popup_image_desktop
    assign popup_img_mobile = settings.hapny_popup_image_mobile | default: settings.popup_image_mobile
    assign success_msg = settings.hapny_custom_success_message | default: settings.custom_success_message
    assign popup_button_label = settings.hapny_popup_button_label | default: settings.popup_button_label | default: default_button_label
  elsif is_blog
    assign popup_header = settings.blog_header_popup_message
    assign popup_body = settings.blog_popup_message
    assign popup_img = settings.blog_popup_image_desktop
    assign popup_img_mobile = settings.blog_popup_image_mobile
    assign success_msg = settings.blog_custom_success_message
    assign popup_button_label = settings.blog_popup_button_label | default: settings.popup_button_label | default: default_button_label
  else
    assign popup_header = settings.header_popup_message
    assign popup_body = settings.popup_message
    assign popup_img = settings.popup_image_desktop
    assign popup_img_mobile = settings.popup_image_mobile
    assign success_msg = settings.custom_success_message
    assign popup_button_label = settings.popup_button_label | default: default_button_label
  endif

  assign popup_context = 'default'
  if is_hapny
    assign popup_context = 'hapny'
  elsif is_blog
    assign popup_context = 'blog'
  endif

  assign popup_body_font_desktop = settings.popup_body_font_size | default: '1rem'
  assign popup_body_font_mobile = settings.popup_body_font_size_mobile | default: popup_body_font_desktop
  assign popup_header_font_desktop = settings.popup_header_font_size | default: '1.4rem'
  assign popup_header_font_mobile = settings.popup_header_font_size_mobile | default: popup_header_font_desktop
  assign popup_header_font_weight_desktop = settings.popup_header_font_weight | default: 600
  assign popup_header_font_weight_mobile = settings.popup_header_font_weight_mobile | default: popup_header_font_weight_desktop
  assign popup_body_font_weight_desktop = settings.popup_body_font_weight | default: 400
  assign popup_body_font_weight_mobile = settings.popup_body_font_weight_mobile | default: popup_body_font_weight_desktop
  assign popup_subheader_font_desktop = settings.popup_subheader_font_size | default: popup_body_font_desktop
  assign popup_subheader_font_mobile = settings.popup_subheader_font_size_mobile | default: popup_subheader_font_desktop
  assign popup_cta_color = settings.popup_cta_color | default: '#0b2440'
  assign popup_cta_border_radius = settings.popup_cta_border_radius | default: 5
  assign popup_close_color = settings.popup_close_color | default: '#ffffff'
  assign popup_border_radius = settings.popup_border_radius | default: 8
  assign popup_overlay_opacity_percentage = settings.popup_overlay_opacity | default: 50
  assign popup_overlay_opacity = popup_overlay_opacity_percentage | divided_by: 100.0
  assign popup_delay_seconds = settings.popup_delay_seconds | default: 3
  assign popup_background_color = settings.popup_background_color | default: '#FAF9F6'
  assign popup_background_opacity_percentage = settings.popup_background_opacity | default: 70
  assign popup_background_blur = settings.popup_background_blur | default: 10
  assign popup_panel_opacity = popup_background_opacity_percentage | times: 0.01
  assign popup_panel_color = popup_background_color | color_modify: 'alpha', popup_panel_opacity
  assign popup_variant_tag_default = settings.popup_variant_tag_default | default: 'popup-default'
  assign hapny_popup_variant_tag = settings.hapny_popup_variant_tag | default: 'popup-hapny'
  assign blog_popup_variant_tag = settings.blog_popup_variant_tag | default: 'popup-blog'
  assign popup_variant_tag = popup_variant_tag_default
  if is_hapny
    assign popup_variant_tag = hapny_popup_variant_tag
  elsif is_blog
    assign popup_variant_tag = blog_popup_variant_tag
  endif
  assign popup_context_tag = 'popup-context-' | append: popup_context
  assign popup_tags = popup_variant_tag
  if popup_context_tag != blank
    assign popup_tags = popup_tags | append: ', ' | append: popup_context_tag
  endif
%}
