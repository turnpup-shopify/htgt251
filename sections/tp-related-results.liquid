{%- if template.name == "product" and product.metafields.custom.related_results.value.links != blank -%}
  {%- assign links = product.metafields.custom.related_results.value.links.value -%}
{%- elsif template.name == "collection" and collection.metafields.custom.related_results.value.links != blank -%}
  {%- assign links = collection.metafields.custom.related_results.value.links.value -%}
{%- elsif template.name == "page" and page.metafields.custom.related_results.value.links != blank -%}
  {%- assign links = page.metafields.custom.related_results.value.links.value -%}
{%- elsif template.name == "article" and article.metafields.custom.related_results.value.links != blank -%}
  {%- assign links = article.metafields.custom.related_results.value.links.value -%}
{%- elsif template.name == "list-collections" -%}
{%- else -%}
  {%- assign tp_skip = true -%}
{%- endif -%}


{%- if links != blank and links != blank -%}
  <div>
    <h2>
      Related Results
    </h2>
    {%- for temp_link in links -%}
      {% assign full_url = "https://hapnyhome.com" | append: request.path %}
      {%- if temp_link.url != full_url -%}
        <a
          class="minimal_button"
          style="display: inline-block; margin-right: 20px; border: 1px solid black;"
          href="{{ temp_link.url }}">
          {{ temp_link.text }}
        </a>
      {%- endif -%}
    {%- endfor -%}
  </div>
{%- elsif section.blocks.size > 0 -%}
  <div>
    <h2>
      Related Results
    </h2>
    {%- for block in section.blocks -%}
      <a
        class="minimal_button"
        style="display: inline-block; margin-right: 20px; border: 1px solid black;"
        href="{{ block.settings.url }}">
        {{ block.settings.text }}
      </a>
    {%- endfor -%}
  </div>
{%- endif -%}

{%- if tp_skip != true -%}
  <style>
    .tp_related_results {
      padding: {{ section.settings.tp_margin_top_bottom }}
      {{ section.settings.tp_margin_left_right }};
      border-top: 1px solid{{ section.settings.turnpup_top_border_color }};
    }
    main > .shopify-section.tp_related_results:last-of-type {
      padding-bottom: {{ section.settings.tp_margin_top_bottom }};
    }
    .tp_related_results p,
    .tp_related_results button.read-more-button {
      font-size: {{ section.settings.turnpup_text_size }};
    }
    .tp_related_results h2 {
      font-size: {{ section.settings.turnpup_title_size }};
    }
    @media screen and (max-width: 700px) {
      .tp_related_results {
        padding: {{ section.settings.tp_mobile_margin_top_bottom }}
        {{ section.settings.tp_mobile_margin_left_right }};
      }
      .tp_related_results p,
      .tp_related_results button.read-more-button {
        font-size: {{ section.settings.turnpup_mobile_text_size }};
      }
      .tp_related_results h2 {
        font-size: {{ section.settings.turnpup_mobile_title_size }};
      }
    }
  </style>
{%- endif -%}

