  }
  .custom-carousel-slider-container .header {
    font-weight: {{ section.settings.title_font_weight }};
  }
  .custom-carousel-slider-container .more {
    font-weight: 400;
    font-style: italic;
  }

  #go-left {
      transform: rotate(90deg);
      -webkit-transform: rotate(90deg);
      -moz-transform: rotate(90deg);
      -ms-transform: rotate(90deg);
      border: none;
  }
  #go-right {
      transform: rotate(270deg);
      -webkit-transform: rotate(270deg);
      -moz-transform: rotate(270deg);
      -ms-transform: rotate(270deg);
      border: none;
  }
  .custom-carousel-slider {
    overflow-x: scroll;
    overflow-y: hidden;
    scroll-behavior: smooth;
    height: 100%;
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    padding: 20px 0 20px 0;
  }
  .custom-carousel-slider::-webkit-scrollbar {
    width: 4px;
    height: 4px;
    background-color: transparent;
  }
  .custom-carousel-slider::-webkit-scrollbar-thumb {
    background: {{ section.settings.arrow_color }};
    border-radius: 4px;
  }
  .custom-carousel-slider::-webkit-scrollbar-track {
    background: transparent;
  }
    .custom-carousel-block-image-container {
    flex: 0 0 auto;
    {% comment %} width: 100%; {% endcomment %}
    width: calc(100% / 4);
    margin-right: 20px;
    height: 100%;
  } 
  .custom-carousel-block-image-container a {
    padding-bottom: 100%;
    position: relative;
    display: block;
  }
  .custom-carousel-block-image-container img {        
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.border_radius }}px;
  }
  .custom-carousel-block-image-container img.rollover {        
      opacity: 0;
  }
  .custom-carousel-block-image-container:hover img.rollover {        
      opacity: 1;
      z-index: 2;       
  }
  .cellTitle {
    color: {{ section.settings.cell_title_color }};
    font-size: 16px;
    font-family: 'Arial';
    font-weight: 700;
    margin: 0.5em 0 0;
    line-height: 1.2;
  }
  .cellSubtitle {
    color: {{ section.settings.cell_subtitle_color }};
    font-size: 16px;
    font-family: 'Arial';
    font-weight: 400;
    margin: 0 0 0.5em;
    line-height: 1.2;
  }
  .carousel-arrows {
    position: absolute;
    z-index: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-between;   
    width: 120%;
    top: 50%;
    left: -10%;
    transform: translateY(-50%);
  }
  .carousel-arrows button {
    -webkit-align-items: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    border-radius: 50%;
    border: 1px solid;
    color: {{ section.settings.arrow_color }};
    cursor: pointer;        
    display: flex;
    height: 42px;
    width: 42px;
  }
  #go-left path, #go-right path {
    fill: currentColor;
  }
  @media screen and (max-width: 700px) {
    .custom-carousel-slider-container {
      width: 100%
    }
    .custom-carousel-block-image-container {        
      flex: 0 0 auto;
      width: 50%;
    }   
    .carousel-arrows {      
      width: 126%;
      top: 50%;
      left: -13%;
      transform: translateY(-50%);
    }
    .custom-carousel-slider-container .header, .custom-carousel-slider-container .more {
      font-size: {{ section.settings.mobile_title_size }};
    }
    .custom-carousel-slider-container .header-container {
      padding-right: {{ section.settings.mobile_padding_right }}px
    }
    .custom-carousel-slider-container .header-container .header, .custom-carousel-slider-container .header-container .more {
      margin-top: 0px;
    }
    .custom-carousel-slider a {        
      width: 100%;
    }  
    .carousel-arrows {
      display: none;
    }
    .carousel-arrows button {
      {% comment %} height: 20px;
      width: 20px; {% endcomment %}
    }
  }
</style>

