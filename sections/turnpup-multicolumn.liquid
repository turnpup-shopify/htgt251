{% if section.settings.enable_url_param_image_swap %}
  <script>
    (function() {
      if (typeof window === 'undefined' || !('URLSearchParams' in window) || !window.fetch) return;

      var init = function() {
        var paramKey = {{ section.settings.url_param_image_key | default: 'multicolumn_product' | json }};
        paramKey = (paramKey || 'multicolumn_product').trim();
        if (!paramKey) return;

        var params = new URLSearchParams(window.location.search);
        var handle = params.get(paramKey);
        if (!handle) return;

        var sectionRoot = document.getElementById('shopify-section-{{ section.id }}');
        if (!sectionRoot) return;

        var targetImage = sectionRoot.querySelector('[data-multicolumn-image-target]') || sectionRoot.querySelector('.multicolumn-card__image');
        if (!targetImage) return;

        var authored = {
          src: targetImage.getAttribute('src'),
          srcset: targetImage.getAttribute('srcset'),
          sizes: targetImage.getAttribute('sizes')
        };

        var showAuthoredImage = function() {
          if (authored.src) targetImage.src = authored.src;
          if (authored.srcset) targetImage.srcset = authored.srcset;
          if (authored.sizes) targetImage.sizes = authored.sizes;
          targetImage.classList.remove('tp-multicolumn-image--pending');
        };

        targetImage.classList.add('tp-multicolumn-image--pending');

        fetch('/products/' + encodeURIComponent(handle) + '.js')
          .then(function(response) {
            if (!response.ok) {
              throw new Error('Product not found');
            }
            return response.json();
          })
          .then(function(product) {
            if (!product || !product.images || product.images.length < 2) {
              showAuthoredImage();
              return;
            }

            var secondImage = product.images[1];
            var imageSrc = typeof secondImage === 'string' ? secondImage : secondImage && secondImage.src;
            if (!imageSrc) {
              showAuthoredImage();
              return;
            }

            var handleLoad = function() {
              targetImage.classList.remove('tp-multicolumn-image--pending');
            };

            targetImage.addEventListener('load', handleLoad, { once: true });
            targetImage.addEventListener('error', function() {
              targetImage.removeEventListener('load', handleLoad);
              showAuthoredImage();
            }, { once: true });

            targetImage.removeAttribute('srcset');
            targetImage.removeAttribute('sizes');
            targetImage.src = imageSrc;
            if (targetImage.complete) {
              targetImage.classList.remove('tp-multicolumn-image--pending');
            }
            if (!targetImage.getAttribute('alt') && product.title) {
              targetImage.alt = product.title;
            }
          })
